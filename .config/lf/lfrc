set drawbox
set hidden true
set icons true
set ignorecase true
set info size:time
set relativenumber true
set scrolloff 4

# KEYMAPS
#map x cut
##map DD delete
#map p paste
#map y copy
#map mf mkfile
#map md mkdir

#map e $$EDITOR "$f"
map e $/usr/bin/nvim "$f"

map gd cd ~/Documents
map gl cd ~/learn
map gw cd ~/work

cmd move-parent &{{
    dironly="setlocal '$(dirname "$PWD")' dironly"
    lf -remote "send $id :updir; $dironly true; $1; $dironly false; open"
}}

map J move-parent down
map K move-parent up


